<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.fxapplication.Controllers.ClientFormController">
    <Button fx:id="logoutButton" onAction="#onLogoutButtonCLick" text="Logout" translateX="735.0" translateY="10.0" />
<GridPane prefHeight="650" prefWidth="800">
    <columnConstraints>
        <ColumnConstraints prefWidth="50.0"  />
        <ColumnConstraints prefWidth="750.0"  />
        <ColumnConstraints prefWidth="50.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints prefHeight="100.0" />
        <RowConstraints prefHeight="100.0" />
        <RowConstraints prefHeight="100.0" />
        <RowConstraints prefHeight="100.0" />
        <RowConstraints prefHeight="100.0" />
         <RowConstraints />
    </rowConstraints>
    <HBox alignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="0">
        <Label prefHeight="46.0" prefWidth="349.0" text="Formulaire client" textOverrun="CLIP">
                <font>
                    <Font name="Cascadia Code Regular" size="31.0" />
                </font>
            </Label>
            <Button fx:id="menuButton" onAction="#onMenuButtonClick" text="Menu" />
        </HBox>
        <HBox alignment="CENTER" spacing="100" GridPane.columnIndex="1" GridPane.rowIndex="2">
            <VBox>
                <Label text="First name" />
                <TextField fx:id="firstNameField" prefHeight="25.0" prefWidth="200.0" />
            </VBox>
            <VBox>
                <Label text="Last name" />
                <TextField fx:id="lastNameField" prefHeight="25.0" prefWidth="200.0" />
            </VBox>
        </HBox>
        <HBox alignment="CENTER" spacing="100" GridPane.columnIndex="1" GridPane.rowIndex="3">
            <VBox>
                <Label text="Date of birth" />
                <DatePicker fx:id="dobField" prefHeight="25.0" prefWidth="200" />
            </VBox>
            <VBox>
                <Label text="Cin" />
                <TextField fx:id="cinField" prefHeight="25.0" prefWidth="200.0" />
            </VBox>
        </HBox>
        <HBox alignment="CENTER" spacing="100" GridPane.columnIndex="1" GridPane.rowIndex="4">
            <VBox>
                <Label text="Email" />
                <TextField fx:id="emailField" prefHeight="25.0" prefWidth="200.0" />
            </VBox>
            <VBox>
                <Label text="Password" />
                <PasswordField fx:id="passwordField" prefHeight="25.0" prefWidth="200.0" />
            </VBox>
        </HBox>
        <VBox alignment="CENTER" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="5">
            <Button fx:id="addButton" mnemonicParsing="false" onAction="#onAddButtonClick" text="Add" />
            <Label fx:id="message" />
        </VBox>
</GridPane>
</VBox>
